{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,**}/*.{ts,tsx,js,json,md}\"",
    "dev:http": "nodemon --watch src --ext ts --exec \"ts-node src/main.ts http\"",
    "dev:ws": "nodemon --watch src --ext ts --exec \"ts-node src/main.ts ws\"",
    "dev:cli": "nodemon --watch src --ext ts --exec \"ts-node src/main.ts cli\"",
    "start:http": "node dist/main.js http",
    "start:ws": "node dist/main.js ws",
    "start:cli": "node dist/main.js cli"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ws": "^8.18.3"
  }
}
